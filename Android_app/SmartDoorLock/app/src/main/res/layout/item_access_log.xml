<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="?attr/selectableItemBackground"
    android:backgroundTint="@color/white"
    android:clipToPadding="false"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_access_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID: "
        android:textColor="@color/teal_700"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_access_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Access Type: "
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_door_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Door Status: "
        android:textColor="@color/primary"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_access_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Access Result: "
        android:textColor="@color/primary"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_access_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Access Time: "
        android:textColor="@color/primary"
        android:textSize="14sp"
        android:textStyle="bold" />

</LinearLayout>